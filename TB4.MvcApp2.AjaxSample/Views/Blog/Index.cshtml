        loadBlogs();

        function loadBlogs(){
            $.ajax({
                url: "/Blog/List",
                type: "GET",
                success: function (response) {
                    console.log(response);
                    for(let i = 0; i < response.length; i++){
                        let item = response[i];

                        const htmlRow = `<tr>
            <td>
                <a href="/Blog/Edit/${item.BlogId}" class="btn btn-outline-warning">Edit</a>
                <button class="btn btn-outline-danger" onclick="deleteBlog('${item.BlogId}')">Delete</button>
            </td>
            <td>${i + 1}</td>
            <td>${item.BlogId}</td>
            <td>${item.BlogTitle}</td>
            <td>${item.BlogAuthor}</td>
            <td>${item.BlogContent}</td>
        </tr>`;
                        $('#tbData').append(htmlRow);
                    }
                },
                error: function (xhr) {
                    console.error(xhr.responseText);
                }
            });
        }
        
